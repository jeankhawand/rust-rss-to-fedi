<ul class="feed-list">
  {% for feed in feeds %}
    <li>
      <a href="/feed/{{feed.name}}"><b>{{feed.name}}</b></a><br />
      {% if feed.description %}<span>{{feed.description | truncate(length=100)}}</span>{% endif %}
    </li>
  {% endfor %}
</ul>

{% if page %}
<div class="pagination">
  {% if page > 1 %}
    <a href="/?page={{page-1}}">prev</a>
  {% endif %}

  {% if page < total_pages %}
    <a href="/?page={{page+1}}">next</a>
  {% endif %}
</div>
{% endif %}
